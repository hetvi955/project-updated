<body style="background-image: url(../images/invitebg.jpg); background-repeat:no-repeat; background-size:cover;">
    <h1>Feedbacks</h1>
<div class="row">
    {{#each comments}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 100)}}</p>
                <br>
                <div class="chip">
                    <a href="/comments/user/{{user._id}}">{{user.firstName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/comments/{{_id}}" class="btn">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>no feedbacks :(</p>
    {{/each}}
</div>
</body