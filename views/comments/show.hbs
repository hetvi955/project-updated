<div class="col s12 m8">
        <h3>{{comment.title}}
            <small>{{{editIcon comment.user user comment._id false}}}</small>
        </h3>
        <div class="card comment">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{comment.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{comment.user.displayName}}</span>
                <img src="{{comment.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/comments/user/{{comment.user._id}}">More From {{comment.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>  
